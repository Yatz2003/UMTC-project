import java.util.Scanner;

public class BubbleSortDigits {

    public static void bubbleSort(int[] arr) {
        int n = arr.length;
        boolean swapped;
        for (int i = 0; i < n - 1; i++) {
            swapped = false;
            for (int j = 0; j < n - 1 - i; j++) {
                if (arr[j] < arr[j + 1]) { // Sort in descending order
                    // Swap arr[j] and arr[j + 1]
                    int temp = arr[j];
                    arr[j] = arr[j + 1];
                    arr[j + 1] = temp;
                    swapped = true;
                }
            }
            if (!swapped) break; // If no two elements were swapped, the array is sorted
        }
    }

    public static void printDigitStars(int[] arr) {
        for (int i = 0; i < arr.length; i++) {
            int digit = arr[i];
            System.out.print(digit + " ");
            // Skip the digits where index is even and print stars on odd indices
            if (i % 2 == 0) {
                for (int j = 0; j < digit; j++) {
                    System.out.print("*");
                }
            }
            System.out.println(); // Move to the next line
        }
    }

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Input number: ");
        String input = scanner.nextLine();
        
        // Convert input string to an array of digits
        int[] digits = new int[input.length()];
        for (int i = 0; i < input.length(); i++) {
            digits[i] = Character.getNumericValue(input.charAt(i));
        }
        
        // Sort the digits using bubble sort
        bubbleSort(digits);
        
        // Output the sorted digits followed by stars where applicable
        printDigitStars(digits);
    }
}
